{
  "name": "argus-vscode",
  "displayName": "ArgusOmni",
  "publisher": "iSmileSoft",
  "description": "VS Code extension for ArgusOmni",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.104.0"
  },
  "extensionDependencies": [
    "redhat.vscode-yaml"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "argus.runTest",
        "title": "Argus: Run Test"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "argus.runTest",
          "when": "resourceLangId == yaml",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "argus.runTest",
          "when": "resourceLangId == yaml",
          "group": "navigation"
        }
      ]
    },
    "yamlValidation": [
      {
        "fileMatch": [
          "*.argus.yml",
          "*.argus.yaml",
          "**/argus-tests/**/*.yml",
          "**/argus-tests/**/*.yaml"
        ],
        "url": "./schemas/argus.schema.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}